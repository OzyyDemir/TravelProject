@using TravelAndTripProject.Models.Classes
@model List<Yorumlar>
@{
    ViewBag.Title = "YorumListesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yorum Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Kullanıcı</th>
        <th>Mail</th>
        <th>Yorum</th>
        <th>Blog</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
    <tr>
        <td>@item.id</td>
        <td>@item.KullaniciAdi</td>
        <td>@item.Mail</td>
        <td>@item.Yorum</td>
        <td>@item.Blog.Baslik</td>
        <td><a href="/Admin/YorumSil/@item.id" class="btn btn-danger">Sil</a></td>
        <td><a href="/Admin/YorumGetir/@item.id" class="btn btn-warning">Güncelle</a></td>
    </tr>
    }
    
</table>

