@using TravelAndTripProject.Models.Classes
@model List<Blog>

<div class="con-bot">
    @foreach (var item in Model)
    {
    <div class="left">
        <div class="bot-left">
            <img src="@item.BlogImage" style="width:300px; height:150px;" alt="" />
        </div>
        <div class="left-text">
            <h4>@item.Baslik</h4>
            <span class="doller">@item.Tarih.ToString("dd.MM.yyyy")</span>
            <p>@item.Aciklama.Substring(0, 30) ...</p>
            <p><a href="/Blog/BlogDetay/@item.id"><span class="read">Read More >></span></a></p>
        </div>
    </div>
    }
    @Html.Action("Partial2","Default")
   
    <div class="clear"></div>
</div>
